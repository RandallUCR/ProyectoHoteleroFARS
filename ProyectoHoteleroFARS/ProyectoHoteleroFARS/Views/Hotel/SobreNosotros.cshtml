@{
    ViewData["Title"] = "Sobre Nostros";
    Layout = "_Layout";
}

<div class="row shadow-lg p-3 mb-5 bg-white rounded" style="padding-left: 1em; padding-right: 1em; margin-right:0.5em">
    <div class="col-12 col-md-12">
        <legend>Sobre Nosotros</legend>
        <p class="text-justify">
            @ViewBag.SobreNosotros
        </p>
    </div>
</div>

<div id="carouselExampleControls" class="carousel slide col-12" data-ride="carousel" style="max-width:600px; max-height:400px; margin-top:1em">
    <div class="carousel-inner">
        @foreach (Entidades.Galeria g in ViewBag.Galeria)
        {
          <div class="carousel-item active">
              <img class="d-block w-100" src="data:image/@g.TC_Formato;base64,@g.TV_Archivo" alt="First slide">
           </div>
        }
        
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>