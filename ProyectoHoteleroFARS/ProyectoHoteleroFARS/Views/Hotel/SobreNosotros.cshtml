@{
    ViewData["Title"] = "Sobre Nostros";
    Layout = "_Layout";
}

<div class="row shadow-lg p-3 mb-5 bg-white rounded" style="padding-left: 1em; padding-right: 1em; margin-right:0.5em">
    <div class="col-12 col-md-12">
        <legend>Sobre Nosotros</legend>
        <p class="text-justify">
            @ViewBag.SobreNosotros
        </p>
    </div>
</div>

<div class="row shadow-lg p-3 mb-5 bg-white rounded" style="padding-left: 1em; padding-right: 0.5em; margin-right:0.5em">
    <legend>Galeria</legend>
</div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width:600px; height:400px">
    <div class="carousel-inner">

        @for (int i = 0; i < ViewBag.Galeria.Count; i++)
        {
            @if (i == 0)
            {
                <div class="carousel-item active">
                    <img class="d-block w-100" src="data:image/@ViewBag.Galeria[i].TC_Formato;base64,@ViewBag.Galeria[i].TV_Archivo" alt="First slide" style="max-width: 100%; height: 400px">
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="data:image/@ViewBag.Galeria[i].TC_Formato;base64,@ViewBag.Galeria[i].TV_Archivo" alt="First slide" style="max-width: 100%; height: 400px">
                </div>
            }

        }

    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>