<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background: #F5E3B7
">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="row">
                    <section class="col-3">
                        <img style="display:block; max-width: 50px; max-height: 50px; width:auto; height:auto" src="data:image/png;base64,@ViewBag.Layout.hotel.TC_Logo" />
                    </section>
                    <section class="col-9">
                        <h1 class="navbar-brand text-light" style="padding-top:0.5em">@ViewBag.Layout.hotel.TC_Nombre</h1>
                    </section>
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="display:flex">
        <section class="" style="display:flex; flex-direction: column; margin-right:1em">
            <a asp-action="HomeCliente" asp-controller="Hotel" class="btn btn-dark" style="width:100%; border-radius:0px">Home</a>
            <a asp-action="SobreNosotrosCliente" asp-controller="Hotel" class="btn btn-dark" style="width:100%; border-radius:0px">Sobre Nosotros</a>
            <a asp-action="" class="btn btn-dark" style="width:100%; border-radius:0px">Facilidades</a>
            <a asp-action="" class="btn btn-dark" style="width:100%; border-radius:0px">Como llegar</a>
            <a asp-action="" class="btn btn-dark" style="width:100%; border-radius:0px">Tarifas</a>
            <a asp-action="" class="btn btn-dark" style="width:100%; border-radius:0px">Reservar en línea</a>
            <a asp-action="" class="btn btn-dark" style="width:100%; border-radius:0px">Contactenos</a>

            <h5 style="margin-top:1em">Espacio Publicitario</h5>
            <section style="border: 1px solid black; margin-top:1em">
                <div class="carousel slide" data-ride="carousel" style="width:200px; height:150px; align-content:center; justify-content:center;">
                    <div class="carousel-inner">
                        @for (int i = 0; i < ViewBag.Layout.publicidad.Count; i++)
                        {
                            if (i == 0)
                            {
                            <div class="carousel-item active">
                              <a href="@ViewBag.Layout.publicidad[i].TC_Link" target="_blank">
                                  <img class="d-block w-100" style="max-width: 100%; height:150px"
                                       src="data:image/@ViewBag.Layout.publicidad[i].galeria.TC_Formato;base64,@ViewBag.Layout.publicidad[i].galeria.TV_Archivo" />
                              </a>
                            </div>
                            }
                            else { 
                            <div class="carousel-item">
                              <a href="@ViewBag.Layout.publicidad[i].TC_Link" target="_blank">
                                  <img class="d-block w-100" style="max-width: 100%; height:150px"
                                       src="data:image/@ViewBag.Layout.publicidad[i].galeria.TC_Formato;base64,@ViewBag.Layout.publicidad[i].galeria.TV_Archivo" />
                              </a>
                            </div>
                            }
                        }


                        </div>
                </div>
                    
</section>
        </section>
                
        <section style="margin-left: 1em;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </section>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
